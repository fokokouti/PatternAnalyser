<UserControl x:Class="PAGui.Visualizer.DotViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PAGui.Visualizer"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1200">
    <Grid x:Name="Grid" >
        <ScrollViewer x:Name="ScrollViewer" Background="#FDFDF5"  VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" >
            <local:GraphElement x:Name="DotGraph" />
        </ScrollViewer>

        <TextBlock x:Name="Statistics" 
               IsHitTestVisible="False" 
               Foreground="Gray" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Bottom">
        </TextBlock>
    </Grid>
</UserControl>